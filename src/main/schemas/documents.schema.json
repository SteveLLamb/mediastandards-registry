{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://github.com/SteveLLamb/mediastandards-documents/0.9.0",
    "$comment": "Copyright, Steve LLamb <steve.llamb@gmail.com>",
    "docTitle": "Schema for the Media Standards Registry - Documents",
    "items": {
        "anyOf": [
            {
                "$id": "#/items/anyOf/0",
                "type": "object",
                "required": [
                    "docId",
                    "docLabel",
                    "docTitle",
                    "docType",
                    "publisher",
                    "status"
                ],
                "additionalProperties": true,
                "properties": {
                    "authors": {
                        "type": "array",
                        "additionalItems": true,
                        "items": {
                            "anyOf": [
                                {
                                    "type": "string",
                                    "minLength": 1
                                }
                            ]
                        }
                    },
                    "details": {
                        "type": "string"
                    },
                    "docElement": {
                        "type": "string"
                    },
                    "docId": {
                        "type": "string",
                        "uniqueItems": true
                    },
                    "docLabel": {
                        "type": "string"
                    },
                    "docNumber": {
                        "type": "string"
                    },
                    "docPart": {
                        "type": "string"
                    },
                    "docTitle": {
                        "type": "string"
                    },
                    "docType": {
                        "type": "string",
                        "enum": [
                            "Best Practice",
                            "Book",
                            "Directive",
                            "Dissertation",
                            "Draft Standard",
                            "Experimental",
                            "Guideline",
                            "Informational",
                            "Memo",
                            "Notation",
                            "Note",
                            "Patent",
                            "Procedure",
                            "Recommendation",
                            "Registry",
                            "Report",
                            "Specification",
                            "Statement",
                            "StyleGuide",
                            "Technical Bulletin",
                            "Technical Doc",
                            "Technical Journal",
                            "Technical Note",
                            "Technical Report",
                            "Administrative Guideline",
                            "Advisory Note",
                            "Engineering Guideline",
                            "Engineering Report",
                            "Operations Manual",
                            "Overview Document",
                            "Recommended Practice",
                            "Registered Disclosure Document",
                            "Standard",
                            "Study Group Report",
                            "White Paper"                         
                        ]
                    },
                    "doi": {
                        "type": "string"
                    },
                    "group": {
                        "type": "string"
                    },
                    "href": {
                        "type": "string",
                        "format": "uri"
                    },
                    "keywords": {
                        "type": "array",
                        "additionalItems": true,
                        "items": {
                            "anyOf": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "enum": [ 
                                        "ACES",
                                        "Accessibility",
                                        "Archive",
                                        "Audio",
                                        "Aux Data",
                                        "Captions",
                                        "Cinema Sound",
                                        "Compression",
                                        "Control",
                                        "DCDM",
                                        "DCinema",
                                        "DCP Application",
                                        "DCP Core",
                                        "Digital Source",
                                        "Distribution",
                                        "File Format",
                                        "Film",
                                        "HTJ2K",
                                        "Image",
                                        "IMF",
                                        "IMF Application",
                                        "IMF Plug-in",
                                        "Immersive Audio",
                                        "Interop",
                                        "JPEG2000",
                                        "KDM",
                                        "Measurement",
                                        "Metadata",
                                        "MXF",
                                        "MXF Application",
                                        "MXF Core",
                                        "Operations",
                                        "OPL",
                                        "Packaging",
                                        "Processing",
                                        "Projection",
                                        "Quality",
                                        "SDI",
                                        "Security",
                                        "Sign Language",
                                        "Sound",
                                        "Subtitles",
                                        "Test & Measurement",
                                        "Theater",
                                        "Television",
                                        "XML"
                                    ]
                                }
                            ]
                        }
                    },
                    "publicationDate": {
                        "type": "string"
                    },
                    "publicationDateDay": {
                        "type": "string",
                        "pattern": "^(3[01]|[12][0-9]|[1-9])$"
                    },
                    "publicationDateMonth": {
                        "type": "string",
                        "pattern": "^(1[0-2]|[1-9])$"
                    },
                    "publicationDateYear": {
                        "type": "string",
                        "minLength": 4,
                        "maxLength": 4
                    },
                    "publisher": {
                        "type": "string"
                    },
                    "references": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "normative": {
                                "type": "array",
                                "additionalItems": true,
                                "items": {
                                    "anyOf": [
                                        {
                                            "type": "string"
                                        }
                                    ]
                                }
                            },
                            "bibliographic": {
                                "type": "array",
                                "additionalItems": true,
                                "items": {
                                    "anyOf": [
                                        {
                                            "type": "string"
                                        }
                                    ]
                                }
                            }
                        }
                    },   
                    "relatedDocs": {
                        "type": "array",
                        "additionalItems": true,
                        "items": {
                            "anyOf": [
                                {
                                    "type": "string",
                                    "minLength": 1
                                }
                            ]
                        }
                    },
                    "repo": {
                        "type": "string",
                        "format": "uri"
                    },
                    "status": {
                        "type": "object",
                        "properties": { 
                            "active": {
                                "type": "boolean"
                            },
                            "amended": {
                                "type": "boolean"
                            },
                            "amendedBy": {
                                "type": "array",
                                "additionalItems": true,
                                "items": {
                                    "anyOf": [
                                        {
                                            "type": "string",
                                            "minLength": 1
                                        }
                                    ]
                                }
                            },
                            "amendedDate": {
                                "type": "string"
                            },
                            "draft": {
                                "type": "boolean"
                            },
                            "publicCd": {
                                "type": "boolean"
                            },
                            "reaffirmed": {
                                "type": "boolean"
                            },
                            "reaffirmDate": {
                                "type": "string"
                            },
                            "stabilized": {
                                "type": "boolean"
                            },
                            "stabilizedDate": {
                                "type": "string"
                            },
                            "statusNote": {
                                "type": "string"
                            },
                            "superseded": {
                                "type": "boolean"
                            },
                            "supersededBy": {
                                "type": "array",
                                "additionalItems": true,
                                "items": {
                                    "anyOf": [
                                        {
                                            "type": "string",
                                            "minLength": 1
                                        }
                                    ]
                                }
                            },
                            "supersededDate": {
                                "type": "string"
                            },
                            "unknown": {
                                "type": "boolean"
                            },
                            "withdrawn": {
                                "type": "boolean"
                            },
                            "withdrawnDate": {
                                "type": "string"
                            }
                        }
                    },
                    "versions": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "versionNum": {
                                    "type": "string"
                                },
                                "versionHref": {
                                    "type": "string",
                                    "format": "uri"
                                }
                            }
                        }
                    },
                    "workInfo": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "review": {
                                "type": "array",
                                "additionalItems": true,
                                "items": {
                                    "type": "object",
                                    "additionalProperties": true,
                                    "required": [
                                        "reviewPeriod"
                                    ],
                                    "properties": {
                                        "assignedGroup": {
                                            "type": "string"
                                        },
                                        
                                        "recApproved": {
                                            "type": "boolean"
                                        },
                                        "reviewDate": {
                                            "type": "string"
                                        },
                                        "reviewNeeded": {
                                            "type": "boolean"
                                        },
                                        "reviewNotes": {
                                            "type": "string"
                                        },
                                        "reviewPeriod": {
                                            "type": "string",
                                            "enum": [ 
                                                "1 Year",
                                                "5 Year",
                                                "Systematic"
                                            ]
                                        },
                                        "reviewRec": {
                                            "type": "string",
                                            "enum": [ 
                                                "Amend",
                                                "Reaffirm",
                                                "Stabilize",
                                                "Revise",
                                                "Withdraw",
                                                "Reassign",
                                                "No Recommendation"
                                            ]
                                        }
                                    }
                                }
                            },
                            "project": {
                                "type": "array",
                                "additionalItems": true,
                                "items": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "required": [
                                        "projectId"
                                    ],
                                    "properties": {
                                        "projectId": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "xmlNamespace": {
                        "type": "array",
                        "additionalItems": true,
                        "items": {
                            "anyOf": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "format": "uri"
                                }
                            ]
                        }
                    }
                }
            }
        ]
    }
}